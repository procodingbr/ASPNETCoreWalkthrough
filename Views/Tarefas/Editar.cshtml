@model Tarefa
@{
    ViewData["Title"] = "Editar Tarefa";
}

<h3>@(ViewData["Title"])</h3>

<form asp-action="Editar">
    <input type="hidden" asp-for="ID" />
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="Descricao" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DataTarefa" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DataTarefa" class="form-control" />
                <span asp-validation-for="DataTarefa" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Salvar Tarefa</button>
            </div>
        </div>
    </div>
</form>